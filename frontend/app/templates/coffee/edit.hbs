{{outlet}}

<div class="good-form">
  <form {{action 'updateProduct' model on="submit"}}>
    <div class="input-group">
      <label>Name</label>
      {{input value=model.name}}
    </div>

    <div class="input-group">
      <label>Origin</label>
      {{input value=model.origin}}
    </div>

    <div class="input-group">
      <label>Purpose</label>
      {{textarea rows=6 value=model.purpose}}
    </div>

    <div>
      <button type="submit">Update Product</button>
    </div>

  </form>
</div>